<% if @conversations && !@conversations.empty? %>
<div id="conversations">
<%= render :partial => "conversations/#{action_name}_conversation", :collection => @conversations, :as => :conversation %>
<%= will_paginate(@conversations) %>
<%= pageless(@conversations.total_pages, '#conversations', "#{action_name}", t('.loading_more_messages')) %>
</div><% else%><div id="no_conversations"><%= "No #{action_name} messages" %></div><%end%>